{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{Service}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gateway-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{Service}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ]
  },

  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v1/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/v1" },
          { "PathPrefix": "/internal" }
        ]
      },
      "identity-exact-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v1/identity"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/v1" },
          { "PathPrefix": "/internal" }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/v1/users/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/v1" },
          { "PathPrefix": "/internal" }
        ]
      },
      "users-exact-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/v1/users"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/v1" },
          { "PathPrefix": "/internal" }
        ]
      }
      //"orders-route": {
      //  "ClusterId": "orders-cluster",
      //  "Match": {
      //    "Path": "/api/v1/orders/{**catch-all}"
      //  },
      //  "Transforms": [
      //    { "PathRemovePrefix": "/api/v1" },
      //    { "PathPrefix": "/internal" }
      //  ]
      //},
      //"orders-exact-route": {
      //  "ClusterId": "orders-cluster",
      //  "Match": {
      //    "Path": "/api/v1/orders"
      //  },
      //  "Transforms": [
      //    { "PathRemovePrefix": "/api/v1" },
      //    { "PathPrefix": "/internal" }
      //  ]
      //}
    },

    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
      //"orders-cluster": {
      //  "Destinations": {
      //    "destination1": {
      //      "Address": "http://localhost:5003"
      //    }
      //  },
